{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "jsxSingleQuote": true,
  "printWidth": 10000,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 3,
  "trailingComma": "none",
  "useTabs": false,
  "overrides": [
    {
      "files": [
        "js/**/*.js"
      ],
      "options": {
        "semi": false
      }
    }
  ]
}